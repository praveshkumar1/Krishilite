<html>
    <head>

  <link href="/css/regind.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        
   
<div class="container">
    <div class="title">Registration</div>
    <form action="/regind" method="post">
      <div class="user-details">
       
        <div class="input-box">
          <span class="details">Username</span>
          <input type="text" name="name" id="" placeholder="Enter your username" required />
        </div>
        <div class="input-box">
          <span class="details">Email</span>
          <input type="text" name="email" id="" placeholder="Enter your email" required />
        </div>
        <div class="input-box">
          <span class="details">Phone Number</span>
          <input type="text" name="number" id="" placeholder="Enter your number" required />
        </div>
        <div class="input-box">
          <span class="details">Password</span>
          <input type="password" name="password" id="" placeholder="Enter your password" required />
        </div>
       
       
       

       
      </div>
  
    
  
      <div class="button">
        <input type="submit" value="Register" />
      </div>
    </form>
  </div>
</body>
  </html>